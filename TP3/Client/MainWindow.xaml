<Window         
        x:Class="IFT585_TP3.Client.MainWindow"
        xmlns:IFT585="clr-namespace:IFT585_TP3.Client;assembly="
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="450"
        Width="800"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <ResourceDictionary Source="/ToastStyle.xaml"/>
    </Window.Resources>
    <Grid>
        <Frame Name="ConnectionPage" Source="ConnectionPage.xaml" Panel.ZIndex="0"/>
        <Frame Name="LobbyPage" Source="LobbyPage.xaml" Panel.ZIndex="0"/>
        <Frame Name="GroupChatPage" Source="ConnectionPage.xaml" Panel.ZIndex="0"/>
        <IFT585:ToastControl Style="{StaticResource ToastStyle}" VerticalAlignment="Bottom" HorizontalAlignment="Center" Width="1024" Height="256" Panel.ZIndex="100" Margin="0,0,0,16" BorderBrush="#FF5A5959" Background="#FF575757" Foreground="White" OpacityMask="Black" FontWeight="Bold" RenderTransformOrigin="0.5,0.5">
            <IFT585:ToastControl.RenderTransform>
                <TranslateTransform X="0" Y="0"/>
            </IFT585:ToastControl.RenderTransform>
        </IFT585:ToastControl>
    </Grid>
</Window>
